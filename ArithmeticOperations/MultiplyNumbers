import java.util.Scanner;

public class MultiplyNumbers {

	public static void main(String[] args) {
		try {
			Scanner input = new Scanner(System.in);
			System.out.print("Enter a number: ");
			int x = input.nextInt();
			System.out.print("Enter another number: ");
			int y = input.nextInt();
			input.close();
			int z = x * y;
			System.out.print("The result is: " + z + "      --> Multiplication");
		} catch (Exception e) {
			System.out.println("Error. Only whole numbers are allowed. Please try again.");
		}
	}

}
