public int[] maxEnd3(int[] nums) {
  //create an array to do the manipulation; the array will be passed as parameter
  int[] array = new int[3];
  //check if the element at index 0 is greater than the array at index 2
  //if true, then assign each element of the array to that value (nums[0])
  if(nums[0] > nums[2]) {
    array[0] = nums[0];
    array[1] = nums[0];
    array[2] = nums[0];
  }
  //check if element at index 0 is less than array at index 2
  //if true, then assign each element of the array to that value (nums[2])
  else if(nums[0] < nums[2]) {
    array[0] = nums[2];
    array[1] = nums[2];
    array[2] = nums[2];
  } 
  //check to see what happens in all other cases. Here, the only 'other case' is
  //when the element at index 0 holds the same value as the element at index 2
  else {
    array[0] = nums[2];
    array[1] = nums[2];
    array[2] = nums[2];
  }
  return array;
}
