
public class TestRectangle {

	public static void main(String[] args) {
		Rectangle rec1 = new Rectangle(2, 4);
		Rectangle rec2 = new Rectangle(3, 5);
		Rectangle rec3 = new Rectangle(4, 5);

		double area1 = rec1.area();
		double perimeter1 = rec1.perimeter();
		
		double area2 = rec2.area();
		double perimeter2 = rec2.perimeter();
		
		double area3 = rec3.area();
		double perimeter3 = rec3.perimeter();
		
		double totalAreaSum = area1 + area2 + area3;
		double totalPerimeterSum = perimeter1 + perimeter2 + perimeter3;

		System.out.println("The sum of the three rectangles' areas is: " + totalAreaSum);
		System.out.println("The sum of the three rectangles' perimeters is: " + totalPerimeterSum);
		
		rec3.resize(75, 6);
		
		area3 = rec3.area();
		perimeter3 = rec3.resize(5, 5);
		perimeter3 = rec3.perimeter();
		
		double updatedArea = area1 + area2 + area3;
		double updatedPerimeter = perimeter1 + perimeter2 + perimeter3;
		
		System.out.println(); System.out.println();
		
		System.out.println("The sum of the three rectangles' areas is: " + updatedArea);
		System.out.println("The sum of the three rectangles' perimeters is: " + updatedPerimeter);
		}

}
